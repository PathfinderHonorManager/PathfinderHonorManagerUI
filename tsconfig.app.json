{
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*"],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "types": [
      "pinia-plugin-persist"
    ],
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "ignoreDeprecations": "5.0",
    "verbatimModuleSyntax": false,
    "importsNotUsedAsValues": "remove"
  }
}
